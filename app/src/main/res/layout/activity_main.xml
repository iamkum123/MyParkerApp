<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/pay"
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="86dp"
        android:layout_marginRight="86dp"
        android:background="@layout/button_normal"
        android:gravity="center"
        android:text="Pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="-52dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#3949AB"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#000A0303"
                android:gravity="center"
                android:text="Home"
                android:textColor="#82B1FF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="345dp"

            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_gravity="bottom"
                android:background="#00B3E5FC"
                android:gravity="bottom|end"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="112dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Welcome"
                    android:textColor="#FA070000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="263dp"
                    android:layout_height="54dp"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:text="name"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="53dp"

                android:background="#00B3E5FC"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="125dp"
                    android:layout_height="39dp"
                    android:layout_weight="1"
                    android:gravity="center|top"
                    android:text="Balance:"
                    android:textColor="#0F0101"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="277dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|left"
                    android:textColor="#66BB6A"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#64B5F6"
                android:gravity="center"
                android:text="Active Parking"
                android:textAllCaps="false"
                android:textColor="#F8000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/current"
                android:layout_width="match_parent"
                android:layout_height="147dp"
                android:background="#00E0F7FA" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#64B5F6"
                android:gravity="center"
                android:text="Summon"
                android:textAllCaps="false"
                android:textColor="#F8000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/chksummon"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:background="#00FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigationView"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignTop="@+id/pay"
        android:layout_marginTop="106dp"
        android:background="#42A5F5"
        app:itemIconTint="@layout/bottombaritem"
        app:itemTextColor="@layout/bottombaritem"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@layout/navigation" />


</android.support.constraint.ConstraintLayout>